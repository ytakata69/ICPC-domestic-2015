testdir = ../data
pipe = < $(testdir)/$(prob)$(1) | diff - $(testdir)/$(prob)$(1).ans

JAVAC = javac

test-aout: a.out
	./$< $(call pipe,1)
	./$< $(call pipe,2)
	./$< $(call pipe,3)
	./$< $(call pipe,4)

test-py: main.py
	python $< $(call pipe,1)
	python $< $(call pipe,2)
	python $< $(call pipe,3)
	python $< $(call pipe,4)

test-j: Main.class
	java Main $(call pipe,1)
	java Main $(call pipe,2)
	java Main $(call pipe,3)
	java Main $(call pipe,4)

a.out: main.c
	$(CC) $+ -o $@

Main.class: Main.java
	$(JAVAC) $+
